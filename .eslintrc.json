{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "react/no-unescaped-entities": "off",
        "no-undef": "off",
        "linebreak-style": ["error", "windows"],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "crlf"
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
